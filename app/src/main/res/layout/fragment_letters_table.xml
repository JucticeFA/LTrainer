<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/letters_fragment"
    android:tag="letters_table"
    android:orientation="vertical"
    tools:context=".LettersTableFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/gaps_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/letters_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/examples_letters_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="examples"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/next_letters_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textColor="@color/purple_200"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="next"
        android:textStyle="bold" />

</androidx.appcompat.widget.LinearLayoutCompat>