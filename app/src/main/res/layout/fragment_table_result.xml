<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_table_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- congratulations
         time of the challenge
         number of rights
         number of mistakes
         highlight words with mistakes
         number of remained repeats for a certain word
         number of days before a new challenge -->
    <TextView
        android:id="@+id/training_congratulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD APPROPRIATE CONG" />

    <TextView
        android:id="@+id/result_time_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: " />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/right_wrong_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_wrong_words_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right/wrong: " />

        <TextView
            android:id="@+id/right_words_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/wrong_words_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/right_words_label"
        android:textColor="@android:color/holo_green_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Right words: " />

    <!-- word/translate/mistakes/remaining repeats/days before next repeat -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/right_words_labels_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="sentence"
            android:textAlignment="center"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="repeat #"
            android:textAlignment="center"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="next repeat in"
            android:textAlignment="center"
            android:textSize="9sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/right_words_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:orientation="vertical"
        android:padding="0.5sp">

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/wrong_words_label"
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Wrong words: " />

    <!-- word/remained repeats/days before next repeat -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/wrong_words_labels_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="sentence"
            android:textAlignment="center"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="repeat #"
            android:textAlignment="center"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="next repeat in"
            android:textAlignment="center"
            android:textSize="9sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/wrong_words_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:orientation="vertical"
        android:padding="0.5sp">

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>