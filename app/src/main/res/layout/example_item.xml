<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/example_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:elevation="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingBottom="4sp">

        <EditText
            android:id="@+id/example_edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Example"
            android:minHeight="48dp" />

        <ImageButton
            android:id="@+id/delete_example_item"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_delete_forever_24" />

        <EditText
            android:id="@+id/example_translate_edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:layout_below="@id/example_edit_item"
            android:hint="Translate"
            android:minHeight="48dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/categories_spinner_item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/example_translate_edit_item"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/example_translate_edit_item"
            android:text="save"
            android:id="@+id/save_changes"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>