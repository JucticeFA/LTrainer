<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/example_card_2_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:elevation="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp">

        <TextView
            android:id="@+id/categories_text_2_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category: %s"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>

        <ImageButton
            android:id="@+id/delete_example_2_item"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/example_text_2_item"
            android:text="Example"
            android:layout_below="@id/delete_example_2_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/example_translate_text_2_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:textSize="16sp"
            android:layout_below="@id/example_text_2_item"
            android:hint="Translate"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>